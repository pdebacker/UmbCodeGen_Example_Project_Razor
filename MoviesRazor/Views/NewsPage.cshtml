@inherits Umbraco.Web.Mvc.UmbracoViewPage<MoviesRazor.Models.NewsPage>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content">
    <div id="sidebar" class="umbModuleContainer">
    </div>

    <div id="news">
        <h1>@Model.Header</h1>
            <p>@Model.IntroText</p>
            <ul>
            @foreach(var newsListItem in Model.NewsListItems)
            {
                <li>
                    <h3><a href="@newsListItem.NodeUrl">@newsListItem.Title</a></h3>
                    <div>@newsListItem.IntroShort<span>@newsListItem.DisplayDate</span></div>
                </li>
            }
            </ul>
    </div>

</div>